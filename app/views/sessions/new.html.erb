<h2 class="ui center aligned large header header-message">
	Welcome to MessageMe - Connect with people!
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular red power off inverted icon"></i>
  Login
</h4>



<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      
      <!-- This is the form for the login submission -->
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
          <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username, type: "username", placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password, type: "password", placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Log in", class: "ui red submit button" %>
      <% end %>
      <!-- end login form -->
      
    </div>
    <div class="middle aligned column">
        <%= link_to '<i class="signup icon"></i>Sign Up'.html_safe, signup_path, class: "ui big button" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>